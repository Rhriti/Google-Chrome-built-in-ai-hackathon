{
  "manifest_version": 3,
  "name": "AI file downloader",
  "version": "1.0",
  "description": "Blocks downloads with MIME type application/pdf.",
  "permissions": [
    "downloads","windows","activeTab","system.display"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ], "action": {
    "default_icon": {
      "16": "icons/ai16.png",
      "48": "icons/ai48.png",
      "128": "icons/ai128.png"
    }
  },"icons": {
    "16": "icons/ai16.png",
    "48": "icons/ai48.png",
    "128": "icons/ai128.png"
  }

}
